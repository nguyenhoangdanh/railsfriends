
<div class="mt-4 p-5 bg-warning text-dark rounded">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.twitter %>

  </p>
  <br/>

<div >
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>  |
  </div>
<div style="margin-top: -38px; margin-left: 65px;">
<%= button_to 'Delete', @friend, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-danger" %>
</div>

<div style="margin-top: -38px; margin-left: 140px; ">
| <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
</div>

</div>









